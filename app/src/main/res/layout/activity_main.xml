<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
        <ScrollView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/main_welcome_text"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="나의 이름은 000 입니다"
                    android:padding="12dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/middleTitle"/>
                <LinearLayout
                    android:background="@color/bgGray"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.RecyclerView
                        android:paddingRight="@dimen/layout_left_right_margin"
                        android:paddingLeft="@dimen/layout_left_right_margin"
                        android:layout_marginTop="10dp"
                        android:id="@+id/main_recycler_view"
                        android:scrollbars="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_marginRight="@dimen/layout_left_right_margin"
                        android:layout_marginLeft="@dimen/layout_left_right_margin"
                        android:paddingRight="@dimen/layout_left_right_margin"
                        android:paddingLeft="@dimen/layout_left_right_margin"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:padding="8dp"
                        android:id="@+id/main_site_layout"
                        android:background="@drawable/moreinfo_radius"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_gravity="center_vertical"
                            android:id="@+id/main_site_text"
                            android:textSize="@dimen/middleContent"
                            android:text="치매에 대한 더 많은 상식"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <Spinner
            android:paddingRight="@dimen/layout_left_right_margin"
            android:paddingLeft="@dimen/layout_left_right_margin"
            android:id="@+id/main_textsize_spinner"
            android:prompt="@string/choose_textsize"
            android:spinnerMode="dialog"
            android:entries="@array/textList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</LinearLayout>