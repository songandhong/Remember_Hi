<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewDiaryActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/mainGray"
    >
    <LinearLayout
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/mainDark"
            android:id="@+id/viewDiary_yearTitle_textView"
            android:layout_marginTop="30dp"
            android:textSize="30sp"
            android:text="0000년"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            />
        <TextView
            android:textColor="@color/mainDark"
            android:id="@+id/viewDiary_monthTitle_textView"
            android:layout_marginTop="30dp"
            android:textSize="30sp"
            android:text="00월"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            />
        <TextView
            android:textColor="@color/mainDark"
            android:id="@+id/viewDiary_dateTitle_textView"
            android:layout_marginTop="30dp"
            android:textSize="30sp"
            android:text="00일"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            />

    </LinearLayout>




    <LinearLayout
        android:elevation="10dp"
        android:layout_margin="17sp"
        android:padding="15dp"
        android:id="@+id/viewDiary_textArea_Linear"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textColor="@color/mainDark"
            android:id="@+id/viewDiary_contents_textView"
            android:textSize="23sp"
            android:text="오늘은 어저구 저쩌구 그랫다 암튼 그랫다 오키"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
