<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".writeDiaryActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <TextView
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0000년 00월 00일 오늘의 일기"
        android:id="@+id/writeDiary_titleDay_text"
        />

    <LinearLayout
        android:gravity="left"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/writeDiary_weather_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                android:text="오늘은 날씨가"
                android:layout_marginRight="15dp"
                />
            <Spinner
                android:id="@+id/writeDiary_weather_spinner"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:entries="@array/weather"
                />

        </LinearLayout>

    </LinearLayout>

    <EditText
        android:textSize="23sp"
        android:gravity="start"
        android:hint="오늘의 일기를 써보세요"
        android:lines="12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/writeDiary_content_edit"
        />
    <Button
            android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="글쓰기"
        />
</LinearLayout>